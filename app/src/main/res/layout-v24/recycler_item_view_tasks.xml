<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:cardElevation="4dp"
    app:cardCornerRadius="8dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="4dp">


    <RelativeLayout
        android:id="@+id/linearRecyclerTask"
        android:layout_width="360dp"
        android:layout_height="74dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="150dp"

        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/taskName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="@string/taskname"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/image_deleteTask"
            android:layout_width="56dp"
            android:layout_height="47dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="1dp"
            android:src="@drawable/ic_delete"
             />


        <Chronometer
            android:id="@+id/chronometer"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="20dp"
            android:layout_toStartOf="@+id/tbtnChronometerTask"
            android:countDown="false"
            android:textSize="18sp" />

        <ToggleButton
            android:id="@+id/tbtnChronometerTask"
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="9dp"
            android:layout_toStartOf="@+id/image_deleteTask"
            android:text="@string/tbtnChronoTask" />

    </RelativeLayout>


</androidx.cardview.widget.CardView>